{
  "name": "popcorn-time-desktop",
  "version": "1.4.0",
  "description": "An experimental Popcorn Time client",
  "scripts": {
    "bench-api": "cross-env NODE_ENV=test jest test/**/*.benchmark.js",
    "build": "cross-env NODE_ENV=production FLAG_SEASON_COMPLETE=false FLAG_SUBTITLES=true FLAG_MANUAL_TORRENT_SELECTION=true yarn build-main & yarn build-renderer",
    "build-e2e": "cross-env NODE_ENV=production FLAG_SEASON_COMPLETE=false FLAG_SUBTITLES=true FLAG_MANUAL_TORRENT_SELECTION=true yarn build-main-e2e & yarn build-renderer-e2e",
    "build-dll": "cross-env NODE_ENV=development webpack --config ./configs/webpack.config.renderer.dev.dll.babel.js --colors",
    "build-main": "cross-env NODE_ENV=production webpack --config ./configs/webpack.config.main.prod.babel.js --colors",
    "build-main-e2e": "cross-env E2E_BUILD=true yarn build-main",
    "build-renderer": "cross-env NODE_ENV=production webpack --config ./configs/webpack.config.renderer.prod.babel.js --colors",
    "build-renderer-e2e": "cross-env E2E_BUILD=true yarn build-renderer",
    "dev": "cross-env NODE_ENV=development FLAG_SEASON_COMPLETE=true FLAG_MANUAL_TORRENT_SELECTION=true FLAG_SUBTITLES=true START_HOT=1 yarn start-renderer-dev",
    "electron-rebuild": "electron-rebuild --parallel --force --types prod,dev,optional --module-dir app",
    "flow": "flow",
    "flow-typed": "flow-typed install",
    "lint": "eslint --cache .",
    "lint-fix": "yarn --silent lint --fix; exit 0",
    "package": "yarn postinstall && yarn build && electron-builder --publish never",
    "package-all": "yarn postinstall && yarn build && electron-builder --publish never --mac --win --linux",
    "package-ci": "yarn postinstall && cross-env ANALYTICS=true yarn build && electron-builder --publish always",
    "precommit": "yarn build-e2e && yarn test-e2e && lint-staged",
    "postinstall": "yarn flow-typed & yarn build-dll & node -r @babel/register postinstall.js & electron-builder install-app-deps",
    "test": "cross-env NODE_ENV=test jest ./test/components/*.spec.js",
    "test-all": "yarn lint && yarn build && yarn test-api && yarn test-e2e",
    "test-api": "cross-env NODE_ENV=test CONFIG_ENDPOINT_TEST=test.org jest ./test/api/butter.spec.js",
    "test-e2e": "node -r @babel/register ./internals/scripts/CheckBuildsExist.js && cross-env NODE_ENV=test testcafe electron:./app ./test/e2e/*.e2e.js",
    "test-e2e-live": "node -r @babel/register ./internals/scripts/CheckBuildsExist.js && cross-env NODE_ENV=test testcafe --live electron:./app ./test/e2e/*.e2e.js",
    "test-screenshot": "cross-env API_USE_MOCK_DATA=true yarn build && jest ./test/screenshot.e2e.js",
    "test-watch": "yarn test --watch",
    "start": "cross-env NODE_ENV=production electron ./app",
    "start-main-dev": "cross-env HOT=1 NODE_ENV=development electron -r @babel/register ./app/main.dev",
    "start-renderer-dev": "cross-env NODE_ENV=development HOT=1 node -r @babel/register ./node_modules/webpack-dev-server/bin/webpack-dev-server --config ./configs/webpack.config.renderer.dev.babel.js"
  },
  "lint-staged": {
    "*.(js)": [
      "cross-env NODE_ENV=development eslint --cache",
      "git add"
    ],
    "*.(json|css|scss|md)|.(babelrc|prettierrc|eslintrc)": [
      "prettier --ignore-path .eslintignore --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amilajack/popcorn-time-desktop.git"
  },
  "author": {
    "name": "Amila Welihinda",
    "email": "amilajack@gmail.com",
    "url": "https://github.com/amilajack"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amilajack/popcorn-time-desktop/issues"
  },
  "keywords": [
    "popcorn-time",
    "popcorn",
    "time",
    "client",
    "electron"
  ],
  "publish": {
    "provider": "github",
    "owner": "amilajack",
    "repo": "popcorn-time-desktop",
    "private": false
  },
  "build": {
    "appId": "com.github.popcorn-time-desktop",
    "productName": "Popcorn Time",
    "files": [
      "dist/",
      "node_modules/",
      "app.html",
      "main.prod.js",
      "main.prod.js.map",
      "package.json"
    ],
    "dmg": {
      "format": "ULFO",
      "window": {
        "width": "500",
        "height": "300"
      },
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ],
      "category": "Video"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  },
  "jest": {
    "testURL": "http://localhost/",
    "setupFiles": [
      "./test/setup.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/internals/mocks/fileMock.js",
      "\\.(css|less|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "moduleDirectories": [
      "node_modules",
      "app/node_modules"
    ]
  },
  "directories": {
    "buildResources": "resources",
    "output": "release"
  },
  "homepage": "https://github.com/amilajack/popcorn-time-desktop",
  "dependencies": {
    "@amilajack/react-plyr": "^2.1.2",
    "@amilajack/yifysubtitles": "^2.1.4",
    "@sentry/electron": "^1.3.0",
    "axios": "^0.19.2",
    "bootstrap": "4.4.1",
    "core-js": "3.6.5",
    "electron-log": "^4.1.1",
    "electron-updater": "^4.2.5",
    "electron-window-state": "^5.0.3",
    "find-free-port": "^2.0.0",
    "get-port": "^5.1.1",
    "ionicons": "4",
    "isomorphic-fetch": "2.2.1",
    "jquery": "^3.5.0",
    "mousetrap": "^1.6.5",
    "network-address": "1.1.2",
    "node-localstorage": "^2.1.6",
    "notie": "4.3.1",
    "opensubtitles-api": "5.1.0",
    "react": "16.13.1",
    "react-addons-css-transition-group": "15.6.2",
    "react-addons-transition-group": "15.6.2",
    "react-dom": "16.13.1",
    "react-hot-loader": "4.12.20",
    "react-loadable": "^5.5.0",
    "react-redux": "^7.2.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-star-rating-component": "^1.4.1",
    "react-transition-group": "^4.3.0",
    "react-visibility-sensor": "^5.1.1",
    "reactstrap": "8.4.1",
    "redux": "^4.0.5",
    "redux-logger": "3.0.6",
    "redux-thunk": "2.3.0",
    "rndm": "1.2.0",
    "semver": "^7.2.2",
    "speedtest-net": "2.1.1",
    "srt2vtt": "1.3.1",
    "super-kat": "0.1.0",
    "universal-analytics": "^0.4.20",
    "vlc-command": "1.2.0",
    "yargs": "15.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-export-default-from": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-react-constant-elements": "^7.9.0",
    "@babel/plugin-transform-react-inline-elements": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-flow": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@babel/register": "^7.9.0",
    "autoprefixer": "^9.7.6",
    "aws-sdk": "^2.656.0",
    "babel-eslint": "10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-dev-expression": "0.2.2",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "chai": "^4.1.2",
    "chalk": "^4.0.0",
    "classnames": "2.2.6",
    "concurrently": "5.1.0",
    "configstore": "^5.0.1",
    "connected-react-router": "^6.8.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.5.2",
    "detect-port": "^1.3.0",
    "devtron": "1.4.0",
    "dotenv": "8.2.0",
    "download": "^8.0.0",
    "electron": "7",
    "electron-builder": "^22.4.1",
    "electron-debug": "^3.0.1",
    "electron-devtools-installer": "3.0.0",
    "electron-rebuild": "^1.10.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-bliss": "^5.0.0-0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-formatter-pretty": "3.0.1",
    "eslint-import-resolver-webpack": "^0.12.1",
    "eslint-plugin-flowtype-errors": "^4.2.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "23.8.2",
